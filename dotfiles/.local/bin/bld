#!/usr/bin/env sh
currentDir=$(pwd)
kceDir="$(pwd | grep -oe "/home/awalder/dev/kce-ws[0-9]\/\(kcegc\|kcecommon\)")"
buildDir="$(pwd | grep -oe "/home/awalder/dev/kce-ws[0-9]\/\(kcegc\|kcecommon\)" | awk -F/ '{ print $6 }')"

cd $kceDir

case "$buildDir" in
    kcegc) DISTCC_NUM_THREADS=$(distcc -j) ./build -L -j64 ${*:1} ;;
    kcecommon) DISTCC_NUM_THREADS=$(distcc -j) ./build -L -j64 --m64 ${*:1} ;;
esac

cd $currentDir
